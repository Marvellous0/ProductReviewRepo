@model ProductReviewAuthentication.Models.Review

@{
    Layout = "_DashBoardLayout";
    ViewBag.Title = "Update Review";
}

<div class="row justify-content-center">

    <div class="card">
        <div class="card-header">
            <h1>Update Review</h1>
        </div>

        <form asp-action="Update">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <input asp-for="Ratings" placeholder="Update Ratings" class="form-control" />
                <span asp-validation-for="Ratings" class="text-danger"></span>
            </div>

            <div class="form-group">
                <textarea asp-for="Comment" placeholder="Update Comment" class="form-control"></textarea>
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>


            <input type="submit" value="Submit " class="btn btn-primary" />
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
