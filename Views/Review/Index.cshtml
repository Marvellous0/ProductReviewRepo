@model IEnumerable<ProductReviewAuthentication.Models.ViewModels.ProductIndexViewModel>
@{
    Layout = "_DashBoardLayout";
    ViewBag.Title = "Reviews";
}

<h3 class="text-center">Reviews</h3>

<div class="card-header">
    <div class="mb-3 border-right">
        <a class="btn btn-success" asp-controller="Review" asp-action="Create">Add Review</a>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Comment</th>
                    <th>Ratings</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var review in Model)
                {
                    <tr>
                        <td> @review.ProductName </td>
                        <td>@review.Comment</td>
                        <td>@review.Ratings </td>
                        <td>
                            <a class="btn btn-success" asp-action="Update" asp-route-id="@review.Id">Update</a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@review.Id">Delete</a>
                            <a class="btn btn-danger" asp-action="Detail" asp-route-id="@review.Id">Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<br />